<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.example.demo.domain.GoodsEntity" table="goods" schema="kjb">
        <id name="itemName">
            <column name="item_name" sql-type="varchar(255)"/>
        </id>
        <property name="price">
            <column name="price" sql-type="float(10,2)" precision="10" scale="2"/>
        </property>
        <property name="itemRate">
            <column name="item_rate" sql-type="float" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>